<div class='container'>
    <h1> Restaurants du coin </h1>
    <%= link_to "Ajouter un nouveau restaurant", new_restaurant_path, class:"btn btn-primary"%>
      <div class='row'>
        <% @restaurants.each do |restaurant| %>
          <div class ="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class = "card">
              <h3><%= link_to restaurant.name, restaurant_path(restaurant)%></h3>
              <ul class="list-unstyled">
                <li><p class="fa fa-map-marker">   <%= restaurant.address %></p></li>
                <li><p class="fa fa-mobile">   <%= restaurant.phone_number %></p></li>
                <li><p class="fa fa-cutlery">   <%= restaurant.category %></p></li>
              </ul>
            </div>
        </div>
        <%end%>
      </div>
  </div>
